{
  "license": "MIT",
  "author": {
    "name": "Seolhun",
    "email": "shun10116@gmail.com",
    "url": "https://github.com/Seolhun"
  },
  "name": "@seolhun/root-ui",
  "description": "root-ui is a design system for React and tailwindcss.",
  "version": "0.8.8-alpha.1",
  "publishConfig": {
    "access": "restricted",
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "LICENSE",
    "CHANGELOG.md",
    "README.md",
    "package.json",
    "tailwind.config.js"
  ],
  "types": "dist/legacy/index.d.ts",
  "main": "dist/legacy/index.cjs",
  "module": "dist/legacy/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/modern/index.d.ts",
        "default": "./dist/modern/index.js"
      },
      "require": {
        "types": "./dist/modern/index.d.cts",
        "default": "./dist/modern/index.cjs"
      }
    },
    "./index.css": {
      "import": "./dist/modern/index.css",
      "require": "./dist/modern/index.css"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "type:check": "tsc --noEmit --project tsconfig.build.json",
    "prebuild": "rimraf dist/*",
    "build": "tsup",
    "test": "vitest run",
    "prettier": "prettier --write './src/**/*.{ts,tsx,js,jsx}'",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./src --fix",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build -o docs"
  },
  "keywords": [
    "react",
    "tailwind",
    "ui"
  ],
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 6.0.0"
  },
  "browserslist": "> 0.25%, not dead",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.19",
    "@fxts/core": "^1.0.0",
    "@headlessui/react": "^2.1.1",
    "@seolhun/root-ui-tailwind": "workspace:*",
    "@tanstack/react-virtual": "^3.8.1",
    "clsx": "^1.2.1",
    "color": "^4.2.3",
    "framer-motion": "^11.2.12",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@heroicons/react": "^2.1.3"
  }
}
